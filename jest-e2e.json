{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@backend(|/.*)$": "<rootDir>/apps/backend/src/$1",
    "^@redis(|/.*)$": "<rootDir>/apps/redis/src/$1",
    "^@configs(|/.*)$": "<rootDir>/libs/configs/src/$1"
  }
}
